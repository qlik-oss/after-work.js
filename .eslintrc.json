{
  "root": true,
  "env": {
    "node": true,
    "mocha": true,
    "protractor": true
  },
  "globals": {
    "sinon": true,
    "expect": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": [
      1,
      {
        "ignore": [
          "children"
        ]
      }
    ],
    "react/prefer-stateless-function": 0
  },
  "extends": [
    "airbnb"
  ]
}
